<script>
  (function() {
      function setEditPage() {
          document.body.style.backgroundColor = "#101010";
          document.body.style.overflow = "hidden";
          var leftSidebar = $("#left-sidebar").css({
              height: (window.innerHeight - $("#foundry-header").height()) + "px",
              overflow: "auto",
          });
  
          var header = $("#foundry-header");
          var timelineContainer = $("#timeline-container");
          timelineContainer.css({
              width:  window.innerWidth
                    - leftSidebar.width()
                    - (2*parseFloat(timelineContainer.css("margin-left")))
                    + "px",
              height:  window.innerHeight
                     - header.height()
                     - (parseFloat(timelineContainer.css("margin-top")))
                     + "px",
          });
      }
      $(window).resize(setEditPage);
      $(document).ready(setEditPage);
  })();
</script>