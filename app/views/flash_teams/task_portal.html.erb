<html lang="en">
	<head>
		
		<meta charset="utf-8">
	</head>
	<body>
		
		
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand" >
                    <a href="task_portal">Task Portal</a>
                </li>
                                         
                <li class="sidebar-brand" style="margin-top: 20px;">
                    <a href="#" style="color: white;">Project Information</a>
                 </li>

                 <div style="margin-left: 25px; color: white; text-decoration:none">
					 <p>Project: <%=@flash_team_json["title"]%></p>
					 

				</div>
            </ul>
            
           
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
									
					<h2>All Tasks in <%=@flash_team_json["title"]%> project </h2>
					 
					 <%i = 0%>
					<%@flash_team_events.each do |event|%>
						<%#url = event["id"].to_s + "/hire_form" %> <!--THIS IS WRONG (it gives us the event id but we need where in the json it is)--> 
						<%url = i.to_s + "/hire_form" %>
						<a href="<%=url%>"><%=event["title"]%></a> 
						<br />
						<%i+= 1%>
					<% end %>
					
					
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

   


	</body>
</html>

  <%= javascript_include_tag "/assets/jquery" %>
  <%= javascript_include_tag "/assets/jquery_ujs" %>
  <%= javascript_include_tag "bootstrap/bootstrap.min" %>
  <%= javascript_include_tag "bootstrap-editable.min" %>
  <%= javascript_include_tag "bootstrap-tour.min" %>