<header id="foundry-header">
  <div class="menu-button icon active"></div>
  <div class="logo small">
    <span class="text">Foundry</span>
  </div>



   <!-- if in author view show the back button on left and foundry tour and start/end button on right -->
   <% if in_author_view %>
	     <div class="span3 ft-buttons" id="ft-buttons-left" style="position:absolute;left:150px;top:12px;">
	       <input type="button" class="btn btn-default" id="backBtn" value="Back" onclick="window.location='<%=flash_teams_path%>';"/>
	  	</div>

	     <div class="span2 ft-buttons" id="ft-buttons-right" style="width:auto;position:absolute;right:12px;top:12px;">
		     <input type="button" class="btn btn-default" id="vcBtn" value="Join Video Call" style="display: ''" onclick="createVideoConf('<%=@flash_team.name + "_" + @flash_team.id.to_s%>');"/>

	       <input type="button" class="btn btn-default" id="tourBtn" value="Start Foundry Author Tour"/>
	       <input type="button" class="btn btn-success" id="flashTeamStartBtn" value="Start Team"/>
	       <input type="button" class="btn btn-danger" id="flashTeamEndBtn" value="End Team" style="display: none"/>
	       <input type="button" class="btn btn-info" id="workerEditTeamBtn" value="Request Change"  style="display: none"/>
	        <input type="button" class="btn btn-primary" id="flashTeamPauseBtn" value="Edit"  style="display: none"/>
          <%= link_to 'Fork Team', fork_flash_team_path(@flash_team), class: 'btn btn-primary' %>
          <%= link_to 'Pull Request', pull_flash_team_path(@flash_team), class: 'btn btn-primary' if @flash_team.fork? %>
          <%= link_to 'Show Diff', edit_flash_team_path(@flash_team, show_diff: true), class: 'btn btn-warning' if @flash_team.fork? && !params[:show_diff] %>
          <%= link_to 'Hide Diff', edit_flash_team_path(@flash_team), class: 'btn btn-warning' if @flash_team.fork? && params[:show_diff] %>
          <%= link_to 'Merge Pull Request', merge_flash_team_path(@flash_team), class: 'btn btn-warning' if @flash_team.fork? && params[:show_diff] %>
	        <input type="button" class="btn btn-primary" id="flashTeamResumeBtn" value="Save" style="display: none"/>
	     </div>

     <% else %> <!-- else only show the start foundry tour button -->
	     <div class="span2 ft-buttons" id="ft-buttons-right" style="width:auto;position:absolute;right:12px;top:12px;">
	       <input type="button" class="btn btn-default" id="vcBtn" value="Join Video Call" style="display: ''" onclick="createVideoConf('<%=@flash_team.name + "_" + @flash_team.id.to_s%>');"/>
	       <input type="button" class="btn btn-default" id="expertTourBtn" value="Start Foundry Worker Tour"/>
	       <input type="button" class="btn btn-info" id="workerEditTeamBtn" value="Request Change"  style="display: none"/>

	       <% if @member_type == 'pc' || @member_type == 'client' %>
		   		<input type="button" class="btn btn-info" id="workerEditTeamBtn" value="Request Change"  style="display: none"/>
				<input type="button" class="btn btn-primary" id="flashTeamPauseBtn" value="Edit"  style="display: none"/>
				<input type="button" class="btn btn-primary" id="flashTeamResumeBtn" value="Save" style="display: none"/>
   		<% end %>


	     </div>

   <% end %>


</header>
